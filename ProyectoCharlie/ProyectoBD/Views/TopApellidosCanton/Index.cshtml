@model IEnumerable<ProyectoBD.TopApellidosCanton_Result>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Top apellidos con mas casos por canton</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">

            <div class="col-md-10">
                <label>Ingrese el canton a buscar</label>
                <input type="text" name="canton" value="" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buscar" class="btn btn-default" />
            </div>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Casos)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Casos)
                </td>
            </tr>
        }

    </table>
}