@model IEnumerable<ProyectoBD.Medico_Filtro_Result>
@{
    ViewBag.Title = "Filtro medico";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Cantidad de medicos por especialidad y estado</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">

        <div class="col-md-10">
            <label>Especialidad</label>
            <input type="text" name="especialidad" value="" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Estado </label>
            <select name="estado" value="">
                <option value=""></option>
                <option value="Inactivo">Inactivo</option>
                <option value="Activo">Activo</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Buscar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Especialidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero_de_medicos)
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Especialidad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Estado)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Numero_de_medicos)
    </td>
</tr>
    }

</table>
